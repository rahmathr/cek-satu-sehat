from bmi_calculator.calculator import calculate_bmi
from bmi_calculator.utils import clear_screen, sleep

def main():
    while True:
        print(22 * "*")
        print("*** KALKULATOR BMI ***")
        print(22 * "*")

        jenis_kelamin = input("Jenis kelamin (L/P) : ").strip()
        if jenis_kelamin in ["L", "P"]:
            pass
        elif jenis_kelamin in ["l", "p"]:
            print("\nGunakan Huruf Kapital, Silahkan ulangi kembali! ðŸ˜Š")
            sleep(3)
            clear_screen()
            continue
        else:
            print("\nInput yang anda masukkan salah! Silahkan input yang benar.")
            sleep(3)
            clear_screen()
            continue

        berat_badan = int(input("Berat badan (kg)    : "))
        usia = int(input("Usia                : "))
        tinggi_badan = int(input("Tinggi badan (cm)   : "))

        hasil_bmi = calculate_bmi(berat_badan, tinggi_badan)

        if hasil_bmi < 18.5:
            print(f"\nBMI anda sekitar {hasil_bmi:.2f}, yang termasuk dalam kategori KURUS")
        elif 18.5 <= hasil_bmi <= 25:
            print(f"\nBMI anda sekitar {hasil_bmi:.2f}, yang termasuk dalam kategori NORMALâœ¨")
        elif 25 < hasil_bmi <= 30:
            print(f"\nBMI anda sekitar {hasil_bmi:.2f}, yang termasuk dalam kategori GEMUK")
        elif hasil_bmi > 30:
            print(f"\nBMI anda sekitar {hasil_bmi:.2f}, yang termasuk dalam kategori OBESITAS")

        sleep(10)
        clear_screen()

if __name__ == '__main__':
    main()
